
<h2>Sign up</h2>
<%= render 'layouts/flash_message' %>
<%= form_for :brewer, class:"form-inline", :url => brewers_path do |f| %>
    <div class="form-group row">
		<div class="col-lg-offset-2 col-lg-3">
		<%= f.text_field :name, class:" form-control", :placeholder=>"user id" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-lg-offset-2 col-lg-3">
		<%= f.password_field :password, class:" form-control", :placeholder=>"password" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-lg-offset-2 col-lg-3">
		<%= f.password_field :confirm_password, class:" form-control", :placeholder=>"confirm password" %>
		</div>
	</div>
	 <div class="row"><%= f.submit "Sign up", class:"btn btn-large btn-success col-lg-2 col-lg-offset-2"%></div>
	<%end%>
