
<div class="row">
	<h2 class="col-xs-offset-1 col-xs-9">Add a new stock </h2>
</div>
<%= form_for :stock, class:"form-inline row", :url => brewer_stocks_path do |f| %>
    <div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
			<%= f.label :brew_id %>
			<%= f.collection_select(:brew_id, Brew.all, :id, :name, prompt:true)%>		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
			<%= f.label :place_id %>
		<%= f.collection_select(:place_id, Place.all, :id, :name, prompt:true)%>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
		<%= f.text_field :quantity, class:" form-control", :placeholder=>"how many?" %>
		</div>
	</div>

	 <div class="row"><%= f.submit "Save", class:"btn btn-large btn-success col-sm-4 col-xs-offset-1 col-xs-9"%></div>
<%end%>