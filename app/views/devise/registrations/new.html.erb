<h2>What's this?</h2>
<p>This site is done because we're interested to see <%=link_to "which part of NUS", root_path%> holds the most stash of alcohol. 
	</p>
	<p>So jump in, pick a nickname and declare your stash!</p>
	<p>Invite more drinker friends, too!</p>

<h2>Registration booth</h2>

<%= form_for @mybrewer, class:"form-inline row", :url => registration_path(@mybrewer) do |f| %>
    <div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
		<%= f.text_field :name, class:" form-control", :placeholder=>"user id" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
		<%= f.password_field :password, class:" form-control", :placeholder=>"password" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
		<%= f.password_field :password_confirmation, class:" form-control", :placeholder=>"confirm password" %>
		</div>
	</div>
	<div class="form-group row">
		<p class="control-label col-sm-3 col-xs-4">Home base: </p>
		<div class="col-sm-3 col-xs-8">
		<%= f.collection_select(:home_base_id, Place.all, :id, :name, prompt:true, class:"col-sm-3")%>
		</div>
	</div>
	<div class="form-group row">
		<p class="control-label col-xs-4 col-sm-3">This person invited me: </p>
		<div class="col-sm-3 col-xs-7">
		<%= f.text_field :inviter_name, class:" form-control", :placeholder=>"inviter" %>
		</div>
	</div>
	 <div class="row"><%= f.submit "Sign up", class:"btn btn-large btn-success col-sm-4 col-xs-offset-1 col-xs-9"%></div>
	<%end%>
<div class="col-sm-4 col-xs-offset-1 col-xs-9"><%= render "devise/shared/links" %></div>		
