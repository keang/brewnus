
<div class="row">
	<h2 class="col-xs-offset-1 col-xs-9">Registration booth</h2>
</div>
<%= form_for(:brewer, class:"form-inline row", :url => registration_path(:brewer)) do |f| %>
	<%= devise_error_messages! %>
    <div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
		<%= f.text_field :name, class:" form-control", :placeholder=>"user id" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
		<%= f.password_field :password, class:" form-control", :placeholder=>"password" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-4 col-xs-offset-1 col-xs-9">
		<%= f.password_field :password_confirmation, class:" form-control", :placeholder=>"confirm password" %>
		</div>
	</div>
	 <div class="row"><%= f.submit "Sign up", class:"btn btn-large btn-success col-sm-4 col-xs-offset-1 col-xs-9"%></div>
	<%end%>
<div class="col-sm-4 col-xs-offset-1 col-xs-9"><%= render "devise/shared/links" %></div>
